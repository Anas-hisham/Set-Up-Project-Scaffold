{
  "name": "gl-stream-buddy",
  "version": "1.3.5",
  "private": true,
  "type": "module",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && npm run electron\"",
    "build": "vite build",
    "electron": "cross-env NODE_ENV=development electronmon . --watch src/main/index.js",
    "preview": "npm run build && cross-env NODE_ENV=production electron .",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "dist": "npm run build && electron-builder",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "pinia": "^3.0.3",
    "primeicons": "^7.0.0",
    "splitpanes": "^4.0.4",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tailwindcss/vite": "^4.1.7",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electronmon": "^2.0.3",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "prettier": "3.5.3",
    "tailwindcss": "^4.1.7",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "wait-on": "^8.0.3"
  },
  "repository": "https://github.com/Anas-hisham/Set-Up-Project-Scaffold",
  "build": {
    "appId": "com.GL.trygl",
    "productName": "GL Stream",
    "copyright": "Copyright Â© 2025",
    "files": [
      "dist/**",
      "src/main/**",
      "src/preload.js",
      "package.json"
    ],
    "asar": true,
    "publish": {
      "provider": "github",
      "owner": "Anas-hisham",
      "repo": "Set-Up-Project-Scaffold",
      "private": false,
      "releaseType": "release"
    },
    "extraResources": [],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GL Stream",
      "uninstallDisplayName": "GL Stream"
    }
  }
}